<Page x:Class="BenchmarkTool.AdminApp.Pages.AdminLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BenchmarkTool.AdminApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminLoginPage">

    <Grid Background="White">
        <StackPanel Width="300" VerticalAlignment="Center">
            <TextBlock Text="BenchmarkTool Admin Login" HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,30"/>
            
            <TextBlock Text="Gebruikersnaam:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,15" Padding="5"/>
            
            <TextBlock Text="Wachtwoord:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="pwdPassword" Margin="0,0,0,25" Padding="5"/>
            
            <Button x:Name="btnLogin" Content="Inloggen" Padding="10,5" Width="120" Click="btnLogin_Click"/>
            
            <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap" Margin="0,15,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page> 