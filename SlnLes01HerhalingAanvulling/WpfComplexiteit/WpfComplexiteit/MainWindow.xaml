<Window x:Class="WpfComplexiteit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPFComplexiteit" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txtWoord"
                 Grid.Row="1" Grid.Column="0"
                 Margin="20,22,22,0"
                 Height="30"
                 VerticalAlignment="Top" />

        <Button x:Name="btnAnalyseer"
        Grid.Row="1" Grid.Column="1"
        Content="ANALYSEER"
        Width="Auto" Height="30"
        Click="btnAnalyseer_Click"
        VerticalAlignment="Top"
        Padding="10,5"
        Margin="10,22,10,0"/>


        <TextBlock x:Name="tblOutput"
                   Grid.Row="1"
                   Margin="20,65,-20,-55"
                   TextWrapping="Wrap"
                   FontSize="16" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
