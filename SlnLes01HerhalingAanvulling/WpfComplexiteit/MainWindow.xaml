<Window x:Class="WpfComplexiteit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Complexiteit" 
        Height="188" Width="451">
    <Grid Margin="10,0,10,-6" RenderTransformOrigin="0.495,0.494">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.343"/>
                <TranslateTransform X="-0.007" Y="0.015"/>
            </TransformGroup>
        </Grid.RenderTransform>
        <TextBox x:Name="txtwoord" 
                 HorizontalAlignment="Left" Margin="20,47,0,0" 
                 VerticalAlignment="Top" 
                 Width="235" Height="28"/>

        <Button x:Name="Analyseerbtn" 
                Content="ANALYSEER" 
                HorizontalAlignment="Left" Margin="295,45,0,0" 
                VerticalAlignment="Top" 
                Width="98" Height="30" 
                Click="Button_Click"/>

        <TextBlock x:Name="resultaatTextBlock" 
                   Margin="20,80,0,0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" />
    </Grid>
</Window>
