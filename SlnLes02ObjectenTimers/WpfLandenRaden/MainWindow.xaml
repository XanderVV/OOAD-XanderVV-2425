<Window x:Class="WpfLanden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLanden"
        mc:Ignorable="d"
        Title="Landen" Height="450" Width="750">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="50,10,70,85">
            <Image x:Name="img1" Source="/argentina.png" Width="100" Height="100" Margin="10" Tag="Argentinië" MouseUp="Image_MouseUp"/>
            <Image x:Name="img2" Source="/finland.png" Width="100" Height="100" Margin="10" Tag="Finland" MouseUp="Image_MouseUp" />
            <Image x:Name="img3" Source="/japan.png" Width="100" Height="100" Margin="10" Tag="Japan" MouseUp="Image_MouseUp" />
            <Image x:Name="img4" Source="/marokko.png" Width="100" Height="100" Margin="10" Tag="Marokko" MouseUp="Image_MouseUp" />
            <Image x:Name="img5" Source="/nieuwzeeland.png" Width="100" Height="100" Margin="10" Tag="Nieuw-Zeeland" MouseUp="Image_MouseUp" />
        </StackPanel>
        <Label x:Name="tekstlbl" Content="Raad zo snel mogelijk alle landen! Ben je klaar?" HorizontalAlignment="Left" Margin="30,300,0,0" VerticalAlignment="Top"/>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="45,380,0,0" VerticalAlignment="Top" Height="25" Width="105" Click="StartButton_Click"/>
        <Label x:Name="resultaatlbl" Content="" HorizontalAlignment="Left" Margin="285,350,0,0" VerticalAlignment="Top" Width="165"/>
        <Label x:Name="Vraaglbl" Content="" HorizontalAlignment="Left" Margin="50,340,0,0" VerticalAlignment="Top" Width="255"/>
    </Grid>
</Window>